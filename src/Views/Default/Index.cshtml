@{
    ViewBag.Title = "PDF Editor Demo (ASP.NET Core)";
    Layout = "~/Views/Shared/_DemoViewLayout.cshtml";
}

@section demoDescription{
    <h1>VintaSoft PDF Editor Demo (ASP.NET Core)</h1>
}

@section requiredScripts{
    <link rel="localization" href="~/locales/settings.json">

    <link href="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.Pdf.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/PdfEditorDemo.css")" rel="stylesheet" />

    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Shared.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.Dialogs.Bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.Pdf.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.Pdf.Dialogs.Bootstrap.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/js/UI/Dialogs/PreviouslyUploadedFilesDialog.js")" type="text/javascript"></script>
}

@section demoContent{
    <div id="pdfDocumentEditorContainer"></div>

    @Html.Partial("UI/Dialogs/BlockUiDialog")
    @Html.Partial("UI/Dialogs/PreviouslyUploadedFilesDialog")

    <script src="@Url.Content("~/js/OpenPdfFileHelper.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/WebUriActionExecutor.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/PdfEditorDemo.js")" type="text/javascript"></script>
}